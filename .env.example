# Fashion Insights - Environment Variables
# Copy this file to .env and fill in your actual values

# ========================================
# MCP (Model Context Protocol) Integration
# ========================================

# Figma MCP - Design to UI Generation
# Get token from: https://www.figma.com/developers/api#access-tokens
FIGMA_PERSONAL_ACCESS_TOKEN=your-figma-token-here
# Get file key from Figma URL: https://www.figma.com/file/[FILE_KEY]/YourDesign
FIGMA_FILE_KEY=your-figma-file-key-here

# ========================================
# n8n Automation (Core Backend)
# ========================================

# n8n Webhook URLs
N8N_WEBHOOK_BASE_URL=http://localhost:5678/webhook
N8N_SIGNUP_WEBHOOK=${N8N_WEBHOOK_BASE_URL}/newsletter-signup
N8N_LATEST_ISSUE_WEBHOOK=${N8N_WEBHOOK_BASE_URL}/latest-issue

# ========================================
# Google Sheets Integration
# ========================================

# Google OAuth2 Credentials
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REFRESH_TOKEN=your-google-refresh-token

# Google Sheets IDs
GOOGLE_SHEETS_SUBSCRIBERS_ID=your-subscribers-sheet-id
GOOGLE_SHEETS_INSIGHTS_ID=your-insights-sheet-id

# ========================================
# Instagram Scraping (Bright Data / Apify)
# ========================================

# Bright Data Credentials
BRIGHT_DATA_API_KEY=your-bright-data-api-key
BRIGHT_DATA_USERNAME=your-username
BRIGHT_DATA_PASSWORD=your-password

# OR Apify Credentials
APIFY_API_TOKEN=your-apify-api-token

# Instagram Influencer Handles (comma-separated)
INSTAGRAM_INFLUENCERS=@fashionista,@styleguide,@trendsetter

# ========================================
# OpenAI API (AI Analysis)
# ========================================

OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4o-mini  # Or gpt-4, gpt-4-turbo

# ========================================
# Email Delivery (Mailjet)
# ========================================

MAILJET_API_KEY=your-mailjet-api-key
MAILJET_API_SECRET=your-mailjet-api-secret
MAILJET_SENDER_EMAIL=your-sender@example.com
MAILJET_SENDER_NAME=Fashion Insights

# ========================================
# Voice AI (ElevenLabs) - Optional
# ========================================

ELEVENLABS_API_KEY=your-elevenlabs-api-key
ELEVENLABS_VOICE_ID=your-preferred-voice-id

# ========================================
# Frontend (Lovable)
# ========================================

# Lovable Project Configuration
LOVABLE_PROJECT_ID=your-lovable-project-id
LOVABLE_API_KEY=your-lovable-api-key  # If needed

# Public-facing URLs
PUBLIC_WEBSITE_URL=https://yoursite.com
PUBLIC_UNSUBSCRIBE_URL=${PUBLIC_WEBSITE_URL}/unsubscribe

# ========================================
# Brand Identity
# ========================================

BRAND_CONTACT_EMAIL=ortal@onsight-analytics.com
BRAND_NAME=Fashion Insights
BRAND_AUTHOR=Ortal

# ========================================
# Development
# ========================================

NODE_ENV=development  # Options: development, production
PORT=3000
LOG_LEVEL=info  # Options: debug, info, warn, error

# ========================================
# Legal & Compliance
# ========================================

# GDPR Data Retention (days)
DATA_RETENTION_DAYS=365

# Legal Pages URLs
LEGAL_DISCLAIMER_URL=${PUBLIC_WEBSITE_URL}/legal/disclaimer
LEGAL_PRIVACY_URL=${PUBLIC_WEBSITE_URL}/legal/privacy
LEGAL_TERMS_URL=${PUBLIC_WEBSITE_URL}/legal/terms
